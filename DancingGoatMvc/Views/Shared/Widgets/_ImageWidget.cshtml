@using DancingGoat.Models.InlineEditors
@using DancingGoat.Models.Widgets
@model DancingGoat.Models.Widgets.ImageWidgetViewModel

@if (Context.Kentico().PageBuilder().EditMode)
{
    Html.RenderPartial("InlineEditors/_ImageUploaderEditor", new ImageUploaderEditorViewModel
    {
        PropertyName = nameof(ImageWidgetProperties.ImageGuid),
        HasImage = Model.Image != null,
    });
}

@Html.AttachmentImage(Model.Image, cssClassName: "img-responsive")
